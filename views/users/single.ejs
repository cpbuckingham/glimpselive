<!doctype html>
<html>

  <% include ../partials/head_auth %>

  <style>
  body{
     padding-bottom:80px; }
  .posts{
    text-align: center;
  }
  a:link, a:hover, a, p {
    text-decoration: none;
    color:black;
  }
  </style>

<body>
  <div class="container_auth">
    <div class="span3 well">
        <center>
        <a href="/auth"><img src="<%=user.avatar %>" name="aboutme" width="180" height="180" class="img-circle"></a><h3><%=user.username %></h3></a>
        <% if(current_user !== user.id){ %>
              <form action="/buddies/<%=user.id %>" method="post">
                <button type="submit" class="btn btn-success">Buddy Up</button>
              </form>
          <br>
        <form action="/buddies/<%=user.id %>?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-danger">Buddy Down</button>
        </form>
        <br>
        <a class="btn btn-primary" href="/messages/new" role="button">Message them</a>
      </center>
    </div>
    <% } %>
  </div>

  <div class="container">
    <div class="row">
  <div class="col-md-8">
    <div class="posts">
  <h2>Their Posts</h2>
  <hr>
  </div>
  <% posts.forEach(function (post) { %>
    <a href="/posts/<%= post.id %>">
    <div class="card">
    <div class="card-block">
      <h4 class="card-title"><%=post.title %></h4>
      <h6 class="card-subtitle mb-2 text-muted"><%=post.user_id%></h6>
      <p class="card-text"><%=post.body %></p>
    </div>
  </div>
  </a>
  <% }) %>
  </div>
  <div class="col-md-4">
    <div class="posts">
  <h2>Goals</h2>
  <hr>
</div>
  <div class="span3 well">
        <p>1. <%= user.goal1 %></p>
        <p>2. <%= user.goal2 %></p>
        <p>3. <%= user.goal3 %></p>
  </div>
  </div>

  <div class="col-md-4">
    <div class="posts">
  <h2>Buddies</h2>
  <hr>
  </div>
  <% buddies.forEach(function (buddy) { %>
      <a href="/users/<%=buddy.id%>"><div class="span3 well">
        <img src="<%=buddy.avatar%>" width="40" height="40" class="img-circle"><h3 style="float:right;margin:0;"><%=buddy.username %></h3>
      </div></a>
      <% }) %>

  </div>
  </div>
  </div>
</body>
</html>
