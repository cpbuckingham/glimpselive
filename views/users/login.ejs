<!doctype html>
<html>
<head>
  <% include ../partials/head %>
  <style>
      body        { padding-top:80px; }
      img         {
        position: fixed;
        z-index: -1!important;
        opacity: .3;
      }
  </style>
</head>
<body>
<div class="container">

<div class="col-sm-6 col-sm-offset-3">
<img src="../images/pineapple.svg"/>
    <h1>Login</h1>

    <!-- LOGIN FORM -->
    <form action="/auth/login" method="post">
        <div class="form-group">
            <label>Username</label>
            <input type="text" class="form-control" name="username" id="login-username" required>
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="hashed_password" id="login-password" required>
        </div>

        <button type="submit" class="btn btn-warning btn-lg">Login</button>
    </form>

    <hr>

    <p>Need an account? <a href="/auth/signup">Sign up</a></p>
    <p>Or go <a href="/">home</a></p>

</div>

</div>
</body>
</html>
