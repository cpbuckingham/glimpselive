<!doctype html>
<html>
<head>
  <% include ../partials/head %>
  <style>
      body        { padding-top:80px; }
  </style>
</head>
<body>
<div class="container">

<div class="col-sm-6 col-sm-offset-3">

  <h2>Edit this post</h2>

    <!-- NEW POST FORM -->
    <form class="" action="/posts/<%= post.id %>?_method=PUT" method="post">
        <div class="form-group">
            <label>Title</label>
            <input type="text" class="form-control" name="title">
        </div>
        <div class="form-group">
            <label>Body</label>
            <input type="text" size="400" class="form-control" name="body">
        </div>

        <button type="submit" class="btn btn-success btn-lg">Submit</button>
    </form>
</div>
</div>
</body>
</html>
